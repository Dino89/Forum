#form{
	width:500px;
	margin:0px auto;
	text-align:left;
	padding:15px;
	font-family:  Arial;
	margin-top: 90px;
	
	

}
#formcontent{
	border: 1px solid black;
	border-radius: 10px;
	background-color:#eee;
}
#form div{
	padding: 10px;
}


	#form input {
	    width: 260px;
	    
	    padding: 6px 5px;
	    -webkit-border-radius: 2px;
	    -moz-border-radius: 2px;
	    border-radius: 2px;
	    border: 1px solid #cfcfcf;
	    -webkit-box-shadow: inset 0 0 4px 2px rgba(0,0,0, 0.1);
	    -moz-box-shadow: inset 0 0 4px 2px rgba(0,0,0, 0.1);
	    box-shadow: inset 0 0 4px 2px rgba(0,0,0, 0.1);
	}
	#form input:focus {
	    outline:0;
	    border:1px solid #95D2DF;
	    -webkit-box-shadow: 0 0 5px 4px rgba(36,184,194, 0.10);
	    -moz-box-shadow: 0 0 5px 4px rgba(36,184,194, 0.10);
	    box-shadow: 0 0 5px 4px rgba(36,184,194, 0.10);
	}
	
.field_with_errors input{
	box-shadow: 0px 0px 4px 2px rgba(255, 0, 0, 0.8) inset !important;
}


