
	<div id="form">
	<h2>Neu im Forum anmelden</h2>
	
    <div id="formcontent">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div> <b>Nickname:</b> </br>
  	<%= f.text_field :nickname  %></div>
  <div> <b>Name:</b> </br>
  	<%= f.text_field :name  %></div>
  <div> <b>Vorname:</b> </br>
  	<%= f.text_field :firstname  %></div>
  <div> <b>Wohnort:</b> </br>
  	<%= f.text_field :location  %></div>
  <div> <b>Geschlecht:</b>
  	<%= f.select :gender, options_for_select([["männlich", "m"], ["weiblich", "w"]]) %></div>
  
  <div> <b>Email:</b> </br>
  	<%= f.email_field :email%></div>

  <div><b>Passwort:</b><br />
  <%= f.password_field :password %></div>

  <div><b>Passwort wiederholen:</b><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "registrieren" %></div>
<% end %>
</div>
</div>

<%= link_to 'Abbrechen und zurück', '/'%>
