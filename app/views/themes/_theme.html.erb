
<div class="themepreview">
	<div>
	<%= link_to theme.title, theme_path(theme)%>
	</div>
	<div class="themepreview-imageanddescription">
		<div class="theme-thumb-div">
	<%= image_tag theme.picture, :class => "theme-thumb"%>
		</div>
		<div class="themepreview-description">
	<%= theme.description%>
	    </div>
	</div>
								  	<% if current_user.has_role? :admin  %>
							  		<li><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></li>
							  	<% end %>
	
	
</div>

