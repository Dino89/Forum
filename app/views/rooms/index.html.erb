 		 <%= link_to "Neuen Raum erstellen", new_room_path(@room) %>
	<% end %>
        <div id="catlist">
            <ul>
			   <% @rooms.each do |room| %>
					<li> 
   	               		<%= link_to room.title, room %>
   	               
