<div id="content">
			
            <% @Theme = Theme.last%>
            <% @Comment = Comment.find_by_sql(["SELECT * FROM comments WHERE procontra like 'contra' AND theme_id=? ORDER BY (SELECT COUNT(*) FROM ratings where ratings.comment_id = comments.id)", @Theme.id])%>
            <div class="discussion">
                
                <div class="contra">
                    <ul>
                    		<%@Comment.each do |comment| %>
  							<li><%=comment.text %></li>
							<%end%>
 						 
                    </ul>
                    
                </div>
                <% @Comment = Comment.find_by_sql(["SELECT * FROM comments WHERE procontra like 'pro' AND theme_id=? ORDER BY (SELECT COUNT(*) FROM ratings where ratings.comment_id = comments.id)", @Theme.id])%>
                <div class="pro">
                    <ul>
                    		<%@Comment.each do |comment| %>
  							<li><%=comment.text %></li>
							<%end%>
                    </ul>
                    
                </div>
                <div class="discussion-content">
                    <h3 class="discussion-title"><%= @Theme.title%></h3>
                    <%= image_tag @Theme.picture, :class => "discussion-image"%>
                    <div class="discussion-discribtion">
                        <%= @Theme.description%>
                    </div>
                </div>
                <% @Comment = Comment.find_by_sql(["SELECT * FROM comments WHERE procontra like 'neutral' AND theme_id=? ORDER BY (SELECT COUNT(*) FROM ratings where ratings.comment_id = comments.id)", @Theme.id])%>
                <div class="neutral">
                	 <ul>
                    		<%@Comment.each do |comment| %>
  							<li><%=comment.text %></li>
							<%end%>
                    </ul>
                </div>

                
            </div>
            
        </div> 

